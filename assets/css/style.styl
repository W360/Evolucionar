Naranja = #f46221
Blanco = #fff
Azul = #1b3571
Gris_Oscuro = #4a4a4a
Gris_Claro = #939393
Gris_muyClaro = #e3e3e3
Verde = #62795a
AzulMarino = #00bbdf


@font-face {
	font-family: "Iconos";
	src: url("../fonts/flaticon.eot");
	src: url("../fonts/flaticon.eot#iefix") format("embedded-opentype"),
	url("../fonts/flaticon.woff") format("woff"),
	url("../fonts/flaticon.ttf") format("truetype"),
	url("../fonts/flaticon.svg") format("svg");
	font-weight: normal;
	font-style: normal;
}

a
	outline none

body,html
	width 100%
	height 100%
	background Blanco
	font-family 'Source Sans Pro', sans-serif
	font-size 14px
	color Gris_Oscuro

	header
		width 100%
		position relative

		#MenuMovil
			display none
		nav
			width 100%
			height auto
			background Naranja
			color Blanco
			z-index 1
			ul
				width 100%
				height auto
				display block
				padding 1.5em 0em
				margin 0em
				list-style none
				text-align center
				
				li
					display inline-block
					padding 0.3em 0em
					position relative
					a
						color Blanco
						text-decoration none
						outline none
					&:hover ul
						display block
					ul
						width 130px
						height auto
						position absolute
						top 20px
						left -35px
						background Naranja
						padding 1em
						margin 0px
						border-radius 10px
						display none
						li
							display block
							border-bottom 0.5px dashed Blanco
							padding 0.5em 0em
				.bar
					&:before
						padding 0.6em
						content "|"
		#ConteHead
			width 1020px
			margin 0 auto
			overflow hidden
			padding 0.5em 0em

			#Logo
				width 337px
				height 174px
				float left
				z-index 1
				img
					width 337px
					height 174px
			#Search
				width 262px
				height auto
				float right
				#pse
					width auto
					height auto
					text-align center
					img
						width 55px
						height 55px
				form
					padding-top 2em
					width 100%
					input[type="text"]
						width auto
						border 1px solid Gris_muyClaro
						padding 0.3em
						margin 0em
						width 65%
						&:hover, &:focus
							border 1px solid Verde
							
					input[type="submit"]
						background Naranja
						color Blanco
						border 0px
						padding 0.4em 0.5em
						margin 0em
						width 28%
				#Contact
					overflow hidden
					width 100%
					padding 1em 0em
					color Azul
					#Mail
						float left
						display block
						a
							color Azul
							text-decoration none
						&:before
							border 2px solid Gris_muyClaro
							font-size 19px
							padding 0.3em
							border-radius 50%
							font-family "Iconos"
							content "\e002"
					#Place
						float right
						display block
						a
							color Azul
							text-decoration none
						&:before
							border 2px solid Gris_muyClaro
							font-size 19px
							padding 0.3em
							border-radius 50%
							font-family "Iconos"
							content "\e000"
	

	section
		width 1020px
		margin 0 auto
		overflow hidden

		p
			text-align justify
			padding 1em 2em

		#Banner
			width auto
			height 300px
			background Gris_muyClaro
			margin-bottom 1em
			h1
				margin 0px
				padding 0px
				text-align center
				color Gris_Claro
		#ConteBoxes
			width auto
			margin 0.5em 0em 0.5em 0em
			overflow hidden
			.Box
				width auto
				width 222px
				float left
				margin 0em 1.5%
				overflow hidden
				p
					text-align justify
					margin 0em
					padding 0em
				.imgBox
					position relative
					span
						position absolute
						bottom 4px
						left 0px
						padding 0.3em 0.6em
						color Blanco
						font-weight 700
				.VerMas
					background Azul
					color Blanco
					text-decoration none
					padding 0.2em 0.4em
					font-weight 700
					border-radius 5px
					float right
					font-size 11px
		.SubTitulo
			padding 2em 2em 0.5em 2em
			border-bottom 4px solid Naranja
			h2
				margin 0em
				color Azul

		.Marco
			width auto
			margin 1.5em 0em
			overflow hidden
			border 1px solid Gris_Claro
			.CadenaValor
				width auto
				img
					width 100%
			p
				text-align justify
				padding 0.5em 1em

		
			.Donde
				float right
				width 25%
				text-align center
				margin 0em 2.5%
				font-weight 700
				margin-top 50px
			.Mapa
				float left
				width 70%
				img
					width 100%

			.info
				float left
				width 27%
				margin 3em 3%
				text-align center
				h3
					margin 0px
					padding 0px
				a
					text-decoration none
					color Azul

		#NotiHome
			width auto
			margin 1.5em 0em
			overflow hidden
			#Noticias
				border 1px solid Gris_Claro
				width 74%
				float left
				#ConteBoxes
					width 100%
					.Box
						width 95%
						.imgBox
							width auto
							height 130px
							overflow hidden
							margin-bottom 1.5em
							img
								width 100%


			#Certificado
				float right
				padding-top 3em

				p
					background Gris_muyClaro
					font-size 12px
					padding 0.5em 1em

		#MigaTitulo
			
			color Blanco
			margin 0.5em
			padding-left 1em
			h1
				margin 0em
				padding 0em

		#Contacto
			width auto
			padding 2em
			form
				width auto
				input[type="text"],textarea
					width 95%
					border 1px solid silver
					border-radius 5px
					padding 1em 0.5em
				input[type="submit"]
					padding 0.5em 1em
					background Gris_Oscuro
					color Blanco
					border 0px
					font-size 18px
					&:hover
						background Naranja
		
			

	footer
		width 100%
		text-align center
		background Azul
		color Blanco
		padding 0.2em 0em

.Naranja
	background Naranja
.Azul
	background Azul
.AzulMarino
	background AzulMarino

.CincuentaP
	width 48%
.izq
	float left
.der
	float right
.clear
	clear both
	overflow hidden
	margin 1.5em 0em
.txtCen
	text-align center

p::-moz-selection{ /* para los p√°rrafos p */
    background: Naranja;
    color: Blanco;
}



@media screen and (max-width: 1000px)
	body
		width 100%
		#ConteHead
			width auto !important

		section
			width auto
			#Banner
				width auto
				height auto
				img
					width 100%
					height auto
			#ConteBoxes
				width auto
				.Box
					width 45%
					height auto
					margin 1em 2.5%
					.imgBox
						width auto
						height auto
						img
							width 100%
			#NotiHome
				width auto
				#Noticias
					width 97%

				#Certificado
					float none
					display block
					text-align center


@media screen and (max-width: 650px)
	body
		width 100%
		header
			width auto
			#ConteHead
				width auto !important
				#Logo
					width 210px
					height 108px
					img
						width 210px
						height 108px
				#Search
					border 0px
					#inputSearch
						width auto
						form
							padding-top 0.5em

@media screen and (max-width: 515px)
	body
		width 100%
		header
			width auto
			nav
				display none
			#MenuMovil
				display block
				background Naranja
				padding 2em
				text-align center
				form
					width auto
					select
						width 80%
						text-align center
						padding 0.5em
						border 1px solid silver
			#ConteHead
				width auto !important
				#Logo
					width 210px
					height 108px
					float none
					margin 1em auto
					img
						width 210px
						height 108px
				#Search
					border 0px
					float none
					margin 1em auto
					#inputSearch
						width auto
						form
							padding-top 0.5em
		section
			width auto
			#Banner
				width auto
				height auto
				display none
			#ConteBoxes
				width auto
				.Box
					width 96%
					height auto
					margin 1em 2.5%
					.imgBox
						width auto
						max-height 140px
						overflow hidden
						img
							width 100%
			#NotiHome
				width auto
				#Noticias
					width auto
					#ConteBoxes
						width auto
						.Box
							width auto
							.imgBox
								height auto
				#Certificado
					float none
					display block
					text-align center
					img
						width 180px
						height auto
						margin-top 2em

			.Marco
				width auto
				.info
					float none
					width 97%
					margin 3em 1.5%
					text-align center

				.Donde
					float none
					width 97%
					text-align center
					margin 0em 2.5%
					font-weight 700
					margin 25px auto
				.Mapa
					float none
					width 97%
					img
						width 100%
				#Contacto
					width auto
					padding 2em
					form
						width auto
						div
							float none
							width 100%
							margin 1em 0em
						input[type="text"],textarea
							width 95%
							border 1px solid silver
							border-radius 5px
							padding 1em 0.5em
						input[type="submit"]
							padding 0.5em 1em
							background Gris_Oscuro
							color Blanco
							border 0px
							font-size 18px
							&:hover
								background Naranja
					
		